{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "gcc ${file} -o ${fileDirname}/bin/${fileBasenameNoExtension} $(pkg-config --cflags --libs gtk4)",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "prebuild"
        },
        {
            "type": "shell",
            "label": "prebuild",
            "command": "mkdir ${fileDirname}/bin",
            "dependsOn": "clean"
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "rm -rf ${fileDirname}/bin"
        },
        {
            "type": "shell",
            "label": "Run make in the current directory",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
